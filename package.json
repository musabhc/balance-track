{
  "name": "balance-track",
  "version": "0.1.0",
  "description": "Lightweight personal finance tracker",
  "main": "main.js",
  "author": "Musa",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --publish never",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.3.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.musa.balance-track",
    "productName": "Balance Track",
    "icon": "build/icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!.github/**"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "musabhc",
        "repo": "balance-track"
      }
    ]
  }
}
